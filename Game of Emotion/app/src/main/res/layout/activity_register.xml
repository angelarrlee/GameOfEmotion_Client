<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.tangq.bodymapsofemotions.Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingBottom="65dp"
            app:srcCompat="@drawable/emotion_logo" />

        <TextView
            android:id="@+id/tvBeAMember"
            style="@style/textView_style"
            android:text="Be a member now"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/etUsername"
            style="@style/editText_style"
            android:hint="Username"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etPassword"
            style="@style/editText_style"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/button_style"
            android:text="Register"
            android:onClick="onReg"/>

        <TextView
            android:id="@+id/tvAlreadyAMember"
            style="@style/textView_style"
            android:text="Already a member? Click here to Login Page"
            android:onClick="onGotoLogin"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
